<div class="col-md-6 col-md-offset-3">
  <div class="new-book-form">
    <h2>S'enregitrer</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name,label:"PrÃ©nom ", required: true, autofocus: true %>
        <%= f.input :last_name,label:"Nom ", required: true, autofocus: true %>
        <%= f.label "Date de naissance " , required: true %><br/>
        <%= f.date_field :birthday, required: true, autofocus: true %><br/>

        <br/><%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password,label:"Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation,label:"Confirmation de mot de passe", required: true %>
      </div>
      <div class="field">
        <%= f.label "Photo " %><br />
        <%= f.file_field :picture, autofocus: true %><br/>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "S'enregistrer", class: "btn-custom2" %>
      </div>
    <% end %>
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>