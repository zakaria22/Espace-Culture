<div class="col-md-6 col-md-offset-3">
	<div class="edit-book-form">
		<h2>Modifier le Film</h2>
		<%= simple_form_for @movie, :html => { :multipart => true} do |f|  %>
		  <%= f.select :moviecat_id, @categories %>
		  <%= f.input :title, label:"Titre" %>
		  <%= f.input :description %>
		  <%= f.input :actors, label:"Acteurs" %>
		  <%= f.input :mes, label:"Metteur en scene" %>
		  <%= f.input :bd, label:"Bande d'annonce" %>
		  <%= f.file_field :movie_img %>
		  <%= f.button :submit, 'Modifier' ,:class => "btn-custom2" %>
		<% end %>
	</div>
</div>